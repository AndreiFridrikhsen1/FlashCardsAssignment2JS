<h1 class="mb-4">Delete Flashcard</h1>

<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this flashcard?</h5>
        <div class="mb-3">
          <strong>Front:</strong> {{flashcard.front}}
        </div>
        <div class="mb-3">
          <strong>Back:</strong> {{flashcard.back}}
        </div>
        <div class="mb-3">
          <strong>Category:</strong> {{flashcard.category}}
        </div>
        {{#if flashcard.imagePath}}
        <div class="mb-3">
          <strong>Image:</strong>
          <div>
            <img src="{{flashcard.imagePath}}" alt="Flashcard image" style="max-width: 200px; max-height: 200px;" class="img-thumbnail">
          </div>
        </div>
        {{/if}}
        <form action="/flashcards/delete/{{flashcard._id}}" method="POST">
          <div class="d-flex justify-content-between">
            <a href="/flashcards" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>